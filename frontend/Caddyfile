{$CADDY_HOST:shortener.localhost} {
	encode gzip

	log {
		output stdout
		format console
	}

	handle /api/* {
		reverse_proxy backend:8000
	}

	handle /go/* {
		reverse_proxy backend:8000
	}

	handle /admin {
		redir /admin /admin/
	}

	handle /admin/* {
		reverse_proxy backend:8000
	}

	handle /static/* {
		reverse_proxy backend:8000
	}

	handle {
		root * /srv
		try_files {path} /index.html =404
		file_server
	}
}
